<idea-plugin>
    <name>Seafood framework</name>
    <id>seafood.framework.id</id>
    <version>1.0.0</version>
    <description>Seafood framework support.</description>
    <vendor email="aliaksandr.parfiankou@gmail.com">Aliaksandr Parfiankou</vendor>
    <category>Custom Languages</category>

    <depends>JavaScript</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="seafood.component.SeafoodFileTypeFactory" />
        <lang.parserDefinition language="Seafood" implementationClass="seafood.component.parse.SeafoodParserDefinition" />
        <lang.syntaxHighlighterFactory language="Seafood" implementationClass="seafood.component.parse.SeafoodSyntaxHighlighterFactory" />
    </extensions>
</idea-plugin>
